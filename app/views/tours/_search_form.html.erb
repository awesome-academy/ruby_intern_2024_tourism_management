<div class="tours-search-form">
  <%= form_tag(tours_path, method: :get) do |f| %>
    <div class="row">
      <div class="col-12">
        <%= text_field_tag :name, params[:name], class: "form-control", placeholder: t("tours.search.name") %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= number_field_tag :min_duration, params[:min_duration], class: "form-control", placeholder: t("tours.search.min_duration") %>
      </div>
      <div class="col-6">
        <%= number_field_tag :max_duration, params[:max_duration], class: "form-control", placeholder: t("tours.search.max_duration") %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= text_field_tag :city, params[:city], class: "form-control", placeholder: t("tours.search.city") %>
      </div>
      <div class="col-6 d-flex flex-column align-items-center">
        <%= select_tag :tour_type_id, options_from_collection_for_select(@tour_types, :id, :type_name, params[:tour_type_id]), placeholder: t("tours.search.tour_type") %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= number_field_tag :min_price, params[:min_price], class: "form-control", placeholder: t("tours.search.min_price") %>
      </div>
      <div class="col-6">
        <%= number_field_tag :max_price, params[:max_price], class: "form-control", placeholder: t("tours.search.max_price") %>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-6 d-flex align-items-center">
        <%= date_field_tag :start_date, params[:start_date], class: "form-control", placeholder: t("tours.search.start_date") %>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-6 mx-auto">
        <%= submit_tag t("tours.search.action"), class: "btn btn-submit" %>
      </div>
    </div>
  <% end %>
</div>
